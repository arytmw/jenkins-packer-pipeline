{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
    },
    "builders": [
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "Tomcat8_OJDK8_AMI",
            "instance_type": "t2.micro",
            "region": "ap-south-1",
            "secret_key": "{{user `aws_secret_key`}}",
            "security_group_id":"sg-0f2da5a7af5a3dd98",
            "ssh_keypair_name":"tomcat-key",
            "ssh_private_key_file":"tomcat-key.pem",
            "associate_public_ip_address":"true",
            "source_ami_filter": {
              "filters": {
              "virtualization-type": "hvm",
              "name": " IOanyT Innovations Kotlin 1.7 - Ubuntu 22.04-fbf7128e-5547-4589-b649-2ef14b35feaf",
              "root-device-type": "ebs"
              },
              "owners": ["679593333241"],
              "most_recent": true
            },
            "ssh_username": "ubuntu",
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline":[
                "sudo add-apt-repository ppa:openjdk-r/ppa",
                "sudo apt-get update",
                "sudo apt-get install -y openjdk-8-jdk",
                "java -version",
                "sudo apt-get install -y tomcat8"
            ]
        }
    ]
}
